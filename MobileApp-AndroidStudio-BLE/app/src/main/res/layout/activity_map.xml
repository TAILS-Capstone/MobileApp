<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101032"
    tools:context=".MapActivity">

    <!-- Map on top -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mapInputs" />

    <!-- Inputs below -->
    <LinearLayout
        android:id="@+id/mapInputs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mapBottomTabs">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Polygon Coordinates (lat1,lng1,lat2,lng2,...)"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/polygonInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/card_generic"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:hint="e.g., 45.4315,-75.7072,45.4315,-75.6872,..."
            android:textColorHint="#AAAAAA"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Pins (lat1,lng1,lat2,lng2,...)"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/pinInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/card_generic"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:hint="e.g., 45.4215,-75.6972,45.4315,-75.7072"
            android:textColorHint="#AAAAAA"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="text" />

    </LinearLayout>

    <!-- Bottom tabs -->
    <LinearLayout
        android:id="@+id/mapBottomTabs"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#151530"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tab_home"
            android:tint="#D1D1D1"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/tabMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tab_map"
            android:tint="#FFD700"
            android:contentDescription="Map" />

        <ImageView
            android:id="@+id/tabConnect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tab_connect"
            android:tint="#D1D1D1"
            android:contentDescription="Connect" />

        <ImageView
            android:id="@+id/tabHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tab_history"
            android:tint="#D1D1D1"
            android:contentDescription="History" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


